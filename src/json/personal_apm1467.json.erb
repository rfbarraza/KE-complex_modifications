{
    "title": "Personal rules (@apm1467)",
    "rules": [
        {
            "description": "right_command + j/k → switch between tabs in applications",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("k", ["right_command"], ["caps_lock"]) %>,
                    "to": <%= to([["close_bracket", ["right_command", "right_shift"]]]) %>,
                    "to_after_key_up": <%= to([["vk_none"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("j", ["right_command"], ["caps_lock"]) %>,
                    "to": <%= to([["open_bracket", ["right_command", "right_shift"]]]) %>,
                    "to_after_key_up": <%= to([["vk_none"]]) %>
                }
            ]
        },
        {
            "description": "right_option → shift + command + option",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("right_option", [], ["caps_lock"]) %>,
                    "to": <%= to([["left_shift", ["left_option", "left_command"]]]) %>
                }
            ]
        },
        {
            "description": "shift + command + option + s → redo with sudo",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("s", ["shift", "option", "command"], ["caps_lock"]) %>,
                    "to": <%= to([
                        ["up_arrow"],
                        ["a", ["left_control"]],
                        ["s"],
                        ["u"],
                        ["d"],
                        ["o"],
                        ["spacebar"],
                        ["return_or_enter"]
                    ]) %>
                }
            ]
        },
        {
            "description": "shift + command + option + spacebar → open screenshot panel",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("spacebar", ["shift", "option", "command"], ["caps_lock"]) %>,
                    "to": <%= to([["5", ["left_shift", "left_command"]]]) %>
                }
            ]
        },
        {
            "description": "shift + command + option + equal_sign → 20 equal signs",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("equal_sign", ["shift", "option", "command"], ["caps_lock"]) %>,
                    "to": <%= to([
                        ["equal_sign"],
                        ["equal_sign"],
                        ["equal_sign"],
                        ["equal_sign"],
                        ["equal_sign"],
                        ["equal_sign"],
                        ["equal_sign"],
                        ["equal_sign"],
                        ["equal_sign"],
                        ["equal_sign"],
                        ["equal_sign"],
                        ["equal_sign"],
                        ["equal_sign"],
                        ["equal_sign"],
                        ["equal_sign"],
                        ["equal_sign"],
                        ["equal_sign"],
                        ["equal_sign"],
                        ["equal_sign"],
                        ["equal_sign"],
                        ["vk_none"]
                    ]) %>
                }
            ]
        },
        {
            "description": "shift + command + option + hyphen → 20 hyphens",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("hyphen", ["shift", "option", "command"], ["caps_lock"]) %>,
                    "to": <%= to([
                        ["hyphen"],
                        ["hyphen"],
                        ["hyphen"],
                        ["hyphen"],
                        ["hyphen"],
                        ["hyphen"],
                        ["hyphen"],
                        ["hyphen"],
                        ["hyphen"],
                        ["hyphen"],
                        ["hyphen"],
                        ["hyphen"],
                        ["hyphen"],
                        ["hyphen"],
                        ["hyphen"],
                        ["hyphen"],
                        ["hyphen"],
                        ["hyphen"],
                        ["hyphen"],
                        ["hyphen"],
                        ["vk_none"]
                    ]) %>
                }
            ]
        }
    ]
}
