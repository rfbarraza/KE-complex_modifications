        {
            "description": "Small keyboards corner key is Esc. All other modifiers yield grave accent and tilde",
            "manipulators": [
                <%# Mistel MD650L has only an Esc key  %>
                {
                    "conditions": [
                        {
                            "type": "device_if",
                            "identifiers": [
                                {
                                    "vendor_id": 1241,
                                    "product_id": 626
                                }
                            ]
                        }
                    ],
                    "type": "basic",
                    "from": <%= from("escape", [], []) %>,
