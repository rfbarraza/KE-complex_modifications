        <%# ---------------------------------------------------------------- %>
        <%# Left Ctrl + Right Shift + H,J,K,L  changes to left, down, up,    %>
        <%# right arrows like VIM                                            %>
        <%# ---------------------------------------------------------------- %>
        {
            "description": "Left Ctrl + Right Shift + H,J,K,L translate to arrow keys like VIM controls",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("h", ["left_control", "right_shift"], []) %>,
                    "to": <%= to([["left_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("j", ["left_control", "right_shift"], []) %>,
                    "to": <%= to([["down_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("k", ["left_control", "right_shift"], []) %>,
                    "to": <%= to([["up_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("l", ["left_control", "right_shift"], []) %>,
                    "to": <%= to([["right_arrow"]]) %>
                }
            ]
        },
        <%# --------------------------------------------------------------- %>
        <%# Left shift 2x opens Mission Control                            %>
        <%# --------------------------------------------------------------- %>
        {
            "description": "Left shift 2x yields Mission Control",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("left_shift", [], ["any"]) %>,
                    "to": <%= to([["mission_control"]]) %>,
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "left_shift pressed",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("left_shift", [], ["any"]) %>,
                    "to": [
                        {
                            "set_variable": {
                                "name": "left_shift pressed",
                                "value": 1
                            }
                        },
                        {
                            "key_code": "left_shift"
                        }
                    ],
                    "to_delayed_action": {
                        "to_if_invoked": [
                            {
                                "set_variable": {
                                    "name": "left_shift pressed",
                                    "value": 0
                                }
                            }
                        ],
                        "to_if_canceled": [
                            {
                                "set_variable": {
                                    "name": "left_shift pressed",
                                    "value": 0
                                }
                            }
                        ]
                    }
                }
            ]
        },
        <%# --------------------------------------------------------------- %>
        <%# Right shift 2x shows Desktop                                      %>
        <%# --------------------------------------------------------------- %>
        {
            "description": "Right shift 2x shows Desktop",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("right_shift", [], ["any"]) %>,
                    "to": <%= to([["mission_control", ["left_command"]]]) %>,
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "right_shift pressed",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("right_shift", [], ["any"]) %>,
                    "to": [
                        {
                            "set_variable": {
                                "name": "right_shift pressed",
                                "value": 1
                            }
                        },
                        {
                            "key_code": "right_shift"
                        }
                    ],
                    "to_delayed_action": {
                        "to_if_invoked": [
                            {
                                "set_variable": {
                                    "name": "right_shift pressed",
                                    "value": 0
                                }
                            }
                        ],
                        "to_if_canceled": [
